# Fastfile for Capacitor iOS App

default_platform(:ios)

platform :ios do
  desc "Build the iOS application"
  lane :build do
    build_app(
      workspace: "App/App.xcworkspace",
      scheme: "App",
      output_directory: "./build",
      export_method: "development"
    )
  end

  desc "Run tests"
  lane :test do
    run_tests(
      workspace: "App/App.xcworkspace",
      scheme: "App"
    )
  end
end
